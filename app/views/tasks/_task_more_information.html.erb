<div class="box">
  <div class="title">
    <h1><i class="fa fa-wrench"></i> Operações</h1>
  </div>

  <% if @task.task_is_own?(current_user.id) %>
    <div class="task-actions">
      <%= link_to 'Alterar ação', edit_task_path(@task), class: "btn-edit" %>
      <%= link_to 'Remover ação',  @task,  method: :delete, data: { confirm: 'Você tem certeza?' }, class: "btn-remove" %>
    </div>
  <% end %>
</div>

<div class="box">
  <div class="title">
    <h1><i class="fa fa-thumbs-o-up"></i> Participar da ação</h1>
  </div>
  <div class="task-actions">
    <%= link_to 'Participar', '#', class: "btn-push btn-ok", :"data-task-id" => "#{@task.id}" %>
    <span class="info-points">+ 10 pontos</span>
  </div>
</div>

<div class="box">
  <div class="title">
    <h1><i class="fa fa-pie-chart"></i> Estatísticas</h1>
  </div>

  <div class="task-statistics">
    <ul>
      <li>
        <ul class="task-statistics-details">
          <li>
            <div class="circle-o">
              <p><%= @task.total_with_action_pending %></p>
            </div>
          </li>
          <li>
            <p class="statistic-info">participando desta ação</p>
          </li>
        </ul>
      </li>
      <li>
        <ul class="task-statistics-details">
          <li>
            <div class="circle-o">
              <p><%= @task.total_with_action_waiting %></p>
            </div>
          </li>
          <li>
            <p class="statistic-info">aguardando aprovação desta ação</p>
          </li>
        </ul>
      </li>
      <li>
        <ul class="task-statistics-details">
          <li>
            <div class="circle-o">
              <p><%= @task.total_with_action_termimated %></p>
            </div>
          </li>
          <li>
            <p class="statistic-info">finalizaram esta ação</p>
          </li>
        </ul>
      </li>
    </ul>
  </div>
</div>
